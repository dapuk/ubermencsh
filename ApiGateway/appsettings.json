{
  "ReverseProxy": {
    "Routes": {
      "api-all": {
        "ClusterId": "api-cluster",
        "Match": { "Path": "/gateway/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/gateway" } ]
      }
    },
    "Clusters": {
      "api-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "d8080": { "Address": "http://localhost:5080/" },
          "d8081": { "Address": "http://localhost:5081/" }
        }
      }
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": { "Url": "http://localhost:5000" }
    }
  }
}
